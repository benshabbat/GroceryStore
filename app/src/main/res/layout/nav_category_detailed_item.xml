<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    android:layout_marginTop="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <ImageView

            android:background="@drawable/border"
            android:id="@+id/nav_cat_det_img"
            android:scaleType="centerInside"
            android:src="@drawable/fruits"
            android:layout_width="120dp"
            android:layout_height="120dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">


            <TextView
                android:id="@+id/nav_cat_det_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:textStyle="bold"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:fontFamily="@font/alice"/>

            <TextView
                android:id="@+id/nav_cat_det_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Price"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/purple_700" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/nav_cat_det_add_item"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/add_circle"
                    android:layout_marginLeft="6dp"/>

                <TextView
                    android:id="@+id/nav_cat_det_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/nav_cat_det_remove_item"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/remove_circle" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/nav_cat_det_add_to_cart"
                android:fontFamily="@font/alice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_bg_detailed"
                android:text="Add to cart"
                android:textAllCaps="false"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_gravity="end"
                android:layout_margin="5dp"/>


        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>